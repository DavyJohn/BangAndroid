<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/blue"
        >

        <ImageButton
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:id="@+id/btn_back"
            android:background="@drawable/backarrow_black"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_conter"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/change_head"
                >
                <com.saint.ibangandroid.utils.XCRoundImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:id="@+id/head_portrait"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/testimage"
                    android:layout_marginStart="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:text="testname"
                    android:textSize="16sp"
                    android:layout_alignBottom="@+id/head_portrait"
                    android:layout_toRightOf="@+id/head_portrait"
                    android:layout_toEndOf="@+id/head_portrait"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="13dp" />
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:src="@drawable/right_arrow"
                    android:layout_marginRight="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_alignBottom="@+id/username"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#82858b"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"
                    android:id="@+id/balance">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/walleticon"
                        android:layout_alignTop="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView2" />
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/dot"
                        android:layout_above="@+id/imageView2"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:id="@+id/imageView3"
                        />
                    <TextView
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:text="我的余额"
                        android:textSize="16sp"
                        android:layout_marginBottom="17dp"
                        android:id="@+id/textView" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_balance"
                        android:textSize="16sp"
                        android:text="￥10.25"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="19dp"
                        android:layout_below="@+id/imageView3"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"
                    android:id="@+id/coupon"
                    >

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/discounticon"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView4" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/dot"
                        android:layout_above="@+id/imageView4"
                        android:layout_toRightOf="@+id/imageView4"
                        android:layout_toEndOf="@+id/imageView4"
                        android:id="@+id/imageView5"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="17dp"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:text="优惠卷"
                        android:textSize="16sp"
                        android:layout_marginBottom="17dp"
                        android:id="@+id/textView2" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adresss">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/mapicon"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView6" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:id="@+id/imageView7"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="地址管理"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView4" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#82858b"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collection">

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/shareicon"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView8" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView8"
                    android:layout_toEndOf="@+id/imageView8"
                    android:id="@+id/imageView9"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="16sp"
                    android:text="饭店、药品"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="19dp"
                    android:layout_below="@+id/imageView9"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/alarmicon"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView10" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:layout_toEndOf="@+id/imageView10"
                    android:id="@+id/imageView11"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="消息中心"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proposal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/adviseicon"
                    android:layout_alignTop="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView12" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView12"
                    android:layout_toRightOf="@+id/imageView12"
                    android:layout_toEndOf="@+id/imageView12"
                    android:id="@+id/imageView13"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="建议与反馈"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView10" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:id="@+id/about">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/abouticon"
                    android:layout_alignTop="@+id/textView12"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView14" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView14"
                    android:layout_toRightOf="@+id/imageView14"
                    android:layout_toEndOf="@+id/imageView14"
                    android:id="@+id/imageView15"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/setupicon"
                    android:layout_alignTop="@+id/textView14"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView16"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/dot"
                    android:layout_above="@+id/imageView16"
                    android:layout_toRightOf="@+id/imageView16"
                    android:layout_toEndOf="@+id/imageView16"
                    android:id="@+id/imageView17"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/textView14"
                    />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>




</LinearLayout>